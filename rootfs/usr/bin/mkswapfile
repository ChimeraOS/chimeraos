set -euo pipefail

SWAPFILE=${1:-}
SWAPSIZE=${2:-}

fail()  { echo >&2 "$@"; exit 1; }
usage() { echo >&2 "Usage: $(basename $0) FILE SIZE"; exit 1; }

[ "$SWAPFILE" ] || usage
[ "$SWAPSIZE" ] || usage

[ -e "$SWAPFILE" ] && fail "File '$SWAPFILE' already exists"

touch "$SWAPFILE"
chattr +C "$SWAPFILE"
btrfs property set "$SWAPFILE" compression none
dd if=/dev/zero of="$SWAPFILE" bs=1M count="$SWAPSIZE"
chmod 600 "$SWAPFILE"
mkswap "$SWAPFILE"
